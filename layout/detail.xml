<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pink">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RSPAU. Hardjolukito"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:src="@drawable/tp1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="14dp">

        <Button
            android:id="@+id/telp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telepon"
            android:textColor="@color/red"
            android:backgroundTint="@color/white"/>
        <Button
            android:id="@+id/checkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Check in"
            android:textColor="@color/red"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6C56+C2C, Jl. Ringroad Timur, Karang Janbe, Banguntapan, Kec. Banguntapan, Kabupaten Bantul, Daerah Istimewa Yogyakarta"
        android:textSize="15dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No telp: (0274)444715"
        android:textSize="15dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_marginLeft="17dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fasilitas:\n
-Instalasi Gawat Darurat (IGD)\n
-Poliklinik Paru\n
-Poliklinik Bedah\n
-Poliklinik Jantung\n
-Poliklinik Syaraf"
        android:textSize="15dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_marginLeft="17dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jam Besuk:\n
-Senin - Sabtu:   11.00 s/d 13.00\n
                            17.00 s/d 19.00"
        android:textSize="15dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_marginLeft="17dp"/>

</LinearLayout>